{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // Tell TS to keep JSX syntax intact for Next.js's SWC compiler...
    "jsx": "preserve",
    // ...but enable the new automatic React runtime so you don't have to
    // `import React from "react"` in every file.
    "jsxImportSource": "react",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", // <-- already there; ensure your .tsx files are picked up
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}